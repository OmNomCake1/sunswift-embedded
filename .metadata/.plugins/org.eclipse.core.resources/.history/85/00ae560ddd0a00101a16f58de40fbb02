/* USER CODE BEGIN PD */
#define CAN_TX_ID 0x01U
// only process messages with this ID
#define CAN_RX_ID 0x02U
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
FDCAN_HandleTypeDef hfdcan1;

TIM_HandleTypeDef htim2;

